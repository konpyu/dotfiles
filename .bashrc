#-------------------------------------------------
# minimal bashrc
#-------------------------------------------------
export LESSCHARSET=utf-8
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export LANG=ja_JP.UTF8
export HISTSIZE=5000

alias ls="ls -al"
alias vi="vim"
alias u="cd .."
alias uu="cd ../.."
alias reload='source ~/.bashrc'

alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -iv'

alias gs="git status"
alias gb="git branch"
alias gl="git log"

